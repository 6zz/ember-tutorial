<h1>Authors</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |author|}}
      <tr>
        <td>
          {{form-toggle item=author field='name' action='saveAuthor'}}
        </td>
        <td>
          <ul>
            {{#each author.books as |book|}}
              <li>{{book.title}}</li>
            {{/each}}
          </ul>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
